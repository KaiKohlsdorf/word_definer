<h2>Definition: <%= @definition.name %></h2>
<h3>Word: <%= @definition.word.name %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename definition</label>
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-success">Update definition</button>
</form>

<form action="/words/<%= @Definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>